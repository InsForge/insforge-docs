{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Insforge Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "appearance": {
    "default": "dark"
  },
  "seo": {
    "metatags": {
      "og:site_name": "Insforge Documentation"
    },
    "indexing": "navigable"
  },
  "search": {
    "prompt": "Search Insforge docs..."
  },
  "favicon": "/favicon.svg",
  "index": "getting-started/introduction",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["getting-started/introduction", "getting-started/quickstart"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              {
                "group": "Database",
                "pages": [
                  "core-concepts/database/overview",
                  "core-concepts/database/mcp"
                ]
              },
              {
                "group": "Authentication",
                "pages": [
                  "core-concepts/authentication/overview",
                  "core-concepts/authentication/mcp"
                ]
              },
              {
                "group": "Storage",
                "pages": [
                  "core-concepts/storage/overview",
                  "core-concepts/storage/mcp"
                ]
              }
            ]
          },
          {
            "group": "Setup & Integration",
            "pages": [
              "setup-integration/deployment",
              "setup-integration/ai-tools"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
