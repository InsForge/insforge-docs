{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Insforge Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "appearance": {
    "default": "dark"
  },
  "styling": {
    "eyebrows": "section"
  },
  "seo": {
    "metatags": {
      "og:site_name": "Insforge Documentation"
    },
    "indexing": "navigable"
  },
  "search": {
    "prompt": "Search Insforge docs..."
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["introduction", "quickstart", "mcp-installation"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              {
                "group": "Database",
                "pages": [
                  "core-concepts/database/overview"
                ]
              },
              {
                "group": "Authentication",
                "pages": [
                  "core-concepts/authentication/overview"
                ]
              },
              {
                "group": "Storage",
                "pages": [
                  "core-concepts/storage/overview"
                ]
              },
              {
                "group": "AI Integration",
                "pages": [
                  "core-concepts/ai/overview"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Tables",
            "openapi": "/api-reference/tables.yaml"
          },
          {
            "group": "Authentication",
            "openapi": "/api-reference/auth.yaml"
          },
          {
            "group": "Records",
            "openapi": "/api-reference/records.yaml"
          },
          {
            "group": "Storage",
            "openapi": "/api-reference/storage.yaml"
          },
          {
            "group": "AI Integration",
            "openapi": "/api-reference/ai.yaml"
          },
          {
            "group": "Logs",
            "openapi": "/api-reference/logs.yaml"
          },
          {
            "group": "Metadata",
            "openapi": "/api-reference/metadata.yaml"
          },
          {
            "group": "Health",
            "openapi": "/api-reference/health.yaml"
          }
        ]        
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://discord.gg/MPxwj5xVvW",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://insforge.dev/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://insforge.dev"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:info@insforge.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://insforge.dev/dashboard"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/InsForge_dev",
      "github": "https://github.com/insforge",
      "linkedin": "https://linkedin.com/company/insforge"
    }
  }
}
