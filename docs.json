              "api-reference/auth/admin-login",
              "api-reference/auth/get-current-user",
              "api-reference/auth/google-auth",
              "api-reference/auth/github-auth",
              "api-reference/auth/oauth-callback",
              "api-reference/auth/get-users"
            ]
          },
          {
            "group": "Profiles",
            "pages": [
              "api-reference/profiles/get-my-profile",
              "api-reference/profiles/update-my-profile",
              "api-reference/profiles/search-profiles",
              "api-reference/profiles/get-user-profile"
